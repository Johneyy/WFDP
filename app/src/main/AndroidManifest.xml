<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pwr.wfdp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ikonka"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FestiwalMap"
            android:label="@string/title_activity_festiwal_map"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventsActivity"
            android:label="@string/title_activity_events"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".AboutStand"
            android:label="@string/title_activity_about_beer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StandsListActivity"
            android:label="@string/title_activity_stands_list"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".BeersActivity"
            android:label="@string/title_activity_beers"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".VoteActivity"
            android:label="@string/title_activity_vote"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
